        justify-self: end;
    }
    
    .cart-actions {
        flex-direction: column;
        gap: var(--space-md);
    }
    
    .cart-actions .btn {
        width: 100%;
    }
}

@media (max-width: 480px) {
    .cart-item {
        grid-template-columns: 60px 1fr;
        gap: var(--space-sm);
    }
    
    .cart-item-image {
        width: 60px;
        height: 60px;
    }
    
    .quantity-controls {
        grid-column: 1 / -1;
        justify-self: start;
        margin-top: var(--space-sm);
    }
    
    .remove-item-btn {
        grid-column: 1 / -1;
        justify-self: end;
        margin-top: var(--space-xs);
    }
    
    .order-summary {
        padding: var(--space-lg);
    }
}/* 
Product Size Display */
.product-size {
    margin: var(--space-sm) 0;
}

.size-label {
    display: inline-block;
    background: var(--color-light-sage);
    color: var(--color-primary);
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-sm);
    font-size: var(--font-xs);
    font-weight: var(--font-medium);
    border: 1px solid var(--color-border);
}

/* Enhanced Add to Cart Button */
.add-to-cart-btn {
    width: 100%;
    margin-top: var(--space-sm);
    position: relative;
    overflow: hidden;
    transition: all var(--transition-normal);
}

.add-to-cart-btn:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
}

.add-to-cart-btn:active {
    transform: translateY(0);
}

/* Cart notification animations */
@keyframes slideInRight {
    from {
        transform: translateX(100%);
        opacity: 0;
    }
    to {
        transform: translateX(0);
        opacity: 1;
    }
}

@keyframes slideOutRight {
    from {
        transform: translateX(0);
        opacity: 1;
    }
    to {
        transform: translateX(100%);
        opacity: 0;
    }
}

.notification-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    font-size: 12px;
    font-weight: bold;
}


/* ============================================================================
   8. CHECKOUT PAGE
   ============================================================================ */

/* ----------------------------------------------------------------------------
   Checkout Section
   ---------------------------------------------------------------------------- */
.checkout-section {
    padding: var(--space-2xl) 0 var(--space-4xl) 0;
    background: var(--color-white);
    min-height: 80vh;
}

/* Progress Indicator */
.checkout-progress {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: var(--space-4xl);
    position: relative;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
}

.checkout-progress::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--color-border);
    z-index: 1;
    transform: translateY(-50%);
}

.progress-step {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    z-index: 2;
    background: var(--color-white);
    padding: 0 var(--space-md);
    min-width: 120px;
}

.step-number {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--color-border);
    color: var(--color-text);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: var(--font-bold);
    font-size: var(--font-sm);
    margin-bottom: var(--space-xs);
    transition: all var(--transition-normal);
    border: 3px solid var(--color-white);
    box-shadow: 0 0 0 2px var(--color-border);
}

.step-label {
    font-size: var(--font-xs);
    font-weight: var(--font-medium);
    color: var(--color-text);
    opacity: 0.7;
    text-align: center;
    letter-spacing: 0.5px;
    text-transform: uppercase;
}

.progress-step.completed .step-number {
    background: var(--color-accent);
    color: var(--color-white);
    box-shadow: 0 0 0 2px var(--color-accent);
}

.progress-step.completed .step-label {
    color: var(--color-accent);
    opacity: 1;
}

.progress-step.active .step-number {
    background: var(--color-primary);
    color: var(--color-white);
    box-shadow: 0 0 0 2px var(--color-primary);
    transform: scale(1.1);
}

.progress-step.active .step-label {
    color: var(--color-primary);
    opacity: 1;
    font-weight: var(--font-semibold);
}

/* Checkout Layout */
.checkout-layout {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: var(--space-4xl);
    align-items: start;
}

/* Checkout Form */
.checkout-main {
    background: var(--color-white);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: var(--space-2xl);
    box-shadow: var(--shadow-lg);
}

.checkout-step {
    display: none;
}

.checkout-step.active {
    display: block;
    animation: fadeInUp 0.5s ease-out;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.step-header {
    text-align: center;
    margin-bottom: var(--space-2xl);
    padding-bottom: var(--space-lg);
    border-bottom: 2px solid var(--color-border);
}

.step-header h2 {
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-size: var(--font-2xl);
    margin-bottom: var(--space-sm);
}

.step-header p {
    color: var(--color-text);
    opacity: 0.8;
    font-size: var(--font-lg);
    margin: 0;
}

/* Form Rows */
.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-lg);
    margin-bottom: var(--space-lg);
}

/* Enhanced Form Groups */
.checkout-form .form-group {
    margin-bottom: var(--space-xl);
    position: relative;
}

.checkout-form .form-group label {
    display: block;
    font-weight: var(--font-semibold);
    margin-bottom: var(--space-sm);
    color: var(--color-text);
    font-size: var(--font-sm);
    letter-spacing: 0.5px;
}

.checkout-form .form-group input,
.checkout-form .form-group select,
.checkout-form .form-group textarea {
    width: 100%;
    padding: var(--space-md) var(--space-lg);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-lg);
    font-family: var(--font-body);
    font-size: var(--font-base);
    transition: all var(--transition-normal);
    background-color: var(--color-white);
    min-height: 50px;
}

.checkout-form .form-group input:focus,
.checkout-form .form-group select:focus,
.checkout-form .form-group textarea:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 4px rgba(74, 107, 107, 0.1);
    transform: translateY(-1px);
}

.checkout-form .form-group input.error,
.checkout-form .form-group select.error,
.checkout-form .form-group textarea.error {
    border-color: #dc3545;
    box-shadow: 0 0 0 4px rgba(220, 53, 69, 0.1);
}

.checkout-form .form-group .error-message {
    display: block;
    color: #dc3545;
    font-size: var(--font-xs);
    margin-top: var(--space-xs);
    font-weight: var(--font-medium);
    opacity: 0;
    transform: translateY(-5px);
    transition: all var(--transition-normal);
}

.checkout-form .form-group .error-message.show {
    opacity: 1;
    transform: translateY(0);
}

/* Custom Checkbox Styling */
.checkbox-label {
    display: flex;
    align-items: center;
    cursor: pointer;
    font-size: var(--font-base);
    color: var(--color-text);
    line-height: 1.5;
    margin-bottom: var(--space-md);
}

.checkbox-label input[type="checkbox"] {
    display: none;
}

.checkbox-label .checkmark {
    width: 20px;
    height: 20px;
    border: 2px solid var(--color-border);
    border-radius: var(--radius-sm);
    margin-right: var(--space-md);
    position: relative;
    transition: all var(--transition-normal);
    flex-shrink: 0;
    background: var(--color-white);
}

.checkbox-label input[type="checkbox"]:checked + .checkmark {
    background: var(--color-accent);
    border-color: var(--color-accent);
    transform: scale(1.05);
}

.checkbox-label input[type="checkbox"]:checked + .checkmark::after {
    content: '✓';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: var(--color-white);
    font-size: 14px;
    font-weight: bold;
}

/* Demo Notice */
.demo-notice {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    background: linear-gradient(135deg, rgba(201, 169, 97, 0.1) 0%, rgba(232, 220, 196, 0.2) 100%);
    border: 2px solid var(--color-accent);
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
    margin-bottom: var(--space-xl);
}

.notice-icon {
    font-size: var(--font-xl);
    flex-shrink: 0;
}

.notice-text {
    color: var(--color-text);
    font-size: var(--font-sm);
    line-height: 1.5;
}

.notice-text strong {
    color: var(--color-accent);
    font-weight: var(--font-bold);
}

/* Billing Fields Toggle */
.billing-fields {
    margin-top: var(--space-lg);
    transition: all var(--transition-normal);
}

.billing-fields.hidden {
    display: none;
}

/* Gift Message Section */
.gift-message-section {
    margin-top: var(--space-lg);
    padding: var(--space-lg);
    background: rgba(232, 220, 196, 0.2);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-accent);
    transition: all var(--transition-normal);
}

.gift-message-section.hidden {
    display: none;
}

.character-count {
    text-align: right;
    font-size: var(--font-xs);
    color: var(--color-text);
    opacity: 0.7;
    margin-top: var(--space-xs);
}

/* Order Review Section */
.order-review {
    background: rgba(232, 220, 196, 0.1);
    border-radius: var(--radius-lg);
    padding: var(--space-xl);
    margin-bottom: var(--space-xl);
}

.review-section {
    margin-bottom: var(--space-xl);
    padding-bottom: var(--space-lg);
    border-bottom: 1px solid var(--color-border);
}

.review-section:last-child {
    border-bottom: none;
    margin-bottom: 0;
}

.review-section h4 {
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-size: var(--font-lg);
    margin-bottom: var(--space-md);
    font-weight: var(--font-semibold);
}

/* Navigation Buttons */
.checkout-navigation {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: var(--space-2xl);
    padding-top: var(--space-xl);
    border-top: 2px solid var(--color-border);
}

.checkout-navigation .btn {
    min-width: 120px;
    padding: var(--space-md) var(--space-xl);
    font-size: var(--font-base);
    font-weight: var(--font-semibold);
}

/* Order Summary Sidebar */
.checkout-sidebar {
    position: relative;
}

.order-summary {
    background: var(--color-white);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: var(--space-xl);
    box-shadow: var(--shadow-lg);
}

.order-summary.sticky {
    position: sticky;
    top: 120px;
}

.order-summary h3 {
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-size: var(--font-xl);
    margin-bottom: var(--space-lg);
    text-align: center;
    padding-bottom: var(--space-md);
    border-bottom: 2px solid var(--color-border);
}

/* Summary Items */
.summary-items {
    margin-bottom: var(--space-xl);
}

.summary-item {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-md);
    border-bottom: 1px solid var(--color-border);
    margin-bottom: var(--space-md);
}

.summary-item:last-child {
    border-bottom: none;
    margin-bottom: 0;
}

.summary-item-image {
    width: 60px;
    height: 60px;
    border-radius: var(--radius-md);
    overflow: hidden;
    flex-shrink: 0;
}

.summary-item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.summary-item-details {
    flex: 1;
}

.summary-item-name {
    font-weight: var(--font-semibold);
    color: var(--color-text);
    font-size: var(--font-sm);
    margin-bottom: var(--space-xs);
}

.summary-item-info {
    font-size: var(--font-xs);
    color: var(--color-text);
    opacity: 0.7;
}

.summary-item-price {
    font-weight: var(--font-bold);
    color: var(--color-primary);
    font-size: var(--font-sm);
}

/* Summary Calculations */
.summary-calculations {
    border-top: 2px solid var(--color-border);
    padding-top: var(--space-lg);
    margin-bottom: var(--space-xl);
}

.summary-line {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-md);
    font-size: var(--font-sm);
}

.summary-line:last-child {
    margin-bottom: 0;
}

.summary-line.total-line {
    border-top: 2px solid var(--color-border);
    padding-top: var(--space-md);
    margin-top: var(--space-md);
    font-size: var(--font-lg);
    font-weight: var(--font-bold);
    color: var(--color-primary);
}

/* Security Badges */
.security-badges {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
}

.security-badge {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm);
    background: rgba(74, 107, 107, 0.05);
    border-radius: var(--radius-md);
    font-size: var(--font-xs);
    color: var(--color-primary);
    font-weight: var(--font-medium);
}

.badge-icon {
    font-size: var(--font-sm);
}

/* Order Confirmation Modal */
.modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10000;
    opacity: 0;
    visibility: hidden;
    transition: all var(--transition-normal);
}

.modal.show {
    opacity: 1;
    visibility: visible;
}

.modal-content {
    background: var(--color-white);
    border-radius: var(--radius-xl);
    max-width: 600px;
    width: 90%;
    max-height: 90vh;
    overflow-y: auto;
    box-shadow: var(--shadow-xl);
    transform: scale(0.9);
    transition: transform var(--transition-normal);
}

.modal.show .modal-content {
    transform: scale(1);
}

.modal-content.large {
    max-width: 800px;
}

.modal-header {
    padding: var(--space-xl);
    text-align: center;
    border-bottom: 2px solid var(--color-border);
}

.modal-header.success {
    background: linear-gradient(135deg, rgba(40, 167, 69, 0.1) 0%, rgba(40, 167, 69, 0.05) 100%);
    border-bottom-color: #28a745;
}

.success-icon {
    width: 80px;
    height: 80px;
    background: #28a745;
    color: var(--color-white);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--font-3xl);
    font-weight: var(--font-bold);
    margin: 0 auto var(--space-lg);
}

.modal-header h3 {
    color: #28a745;
    font-family: var(--font-heading);
    font-size: var(--font-2xl);
    margin: 0;
}

.modal-body {
    padding: var(--space-xl);
}

.confirmation-details {
    text-align: center;
}

.confirmation-details p {
    color: var(--color-text);
    font-size: var(--font-lg);
    margin-bottom: var(--space-lg);
}

.order-number {
    background: rgba(201, 169, 97, 0.1);
    border: 2px solid var(--color-accent);
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
    margin: var(--space-xl) 0;
    font-size: var(--font-lg);
}

.order-number strong {
    color: var(--color-accent);
}

.order-summary-confirmation {
    background: rgba(232, 220, 196, 0.2);
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
    margin: var(--space-xl) 0;
    text-align: left;
}

.modal-footer {
    padding: var(--space-xl);
    border-top: 2px solid var(--color-border);
    display: flex;
    gap: var(--space-md);
    justify-content: center;
}

.modal-footer .btn {
    min-width: 150px;
}

/* Responsive Design */
@media (max-width: 1200px) {
    .checkout-layout {
        grid-template-columns: 1fr 350px;
        gap: var(--space-2xl);
    }
}

@media (max-width: 950px) {
    .checkout-layout {
        grid-template-columns: 1fr;
        gap: var(--space-xl);
    }
    
    .checkout-sidebar {
        order: -1;
    }
    
    .order-summary.sticky {
        position: static;
    }
    
    .checkout-progress {
        margin-bottom: var(--space-2xl);
    }
    
    .progress-step {
        min-width: 80px;
        padding: 0 var(--space-sm);
    }
    
    .step-number {
        width: 35px;
        height: 35px;
        font-size: var(--font-xs);
    }
    
    .step-label {
        font-size: 10px;
    }
}

@media (max-width: 768px) {
    .checkout-main {
        padding: var(--space-xl);
    }
    
    .order-summary {
        padding: var(--space-lg);
    }
    
    .form-row {
        grid-template-columns: 1fr;
        gap: var(--space-md);
    }
    
    .checkout-navigation {
        flex-direction: column;
        gap: var(--space-md);
    }
    
    .checkout-navigation .btn {
        width: 100%;
        min-width: auto;
    }
    
    .step-header h2 {
        font-size: var(--font-xl);
    }
    
    .modal-content {
        width: 95%;
        margin: var(--space-md);
    }
    
    .modal-header,
    .modal-body,
    .modal-footer {
        padding: var(--space-lg);
    }
    
    .modal-footer {
        flex-direction: column;
    }
}

@media (max-width: 600px) {
    .checkout-section {
        padding: var(--space-lg) 0 var(--space-2xl) 0;
    }
    
    .checkout-main {
        padding: var(--space-lg);
        border-radius: var(--radius-lg);
    }
    
    .order-summary {
        padding: var(--space-md);
        border-radius: var(--radius-lg);
    }
    
    .checkout-progress {
        margin-bottom: var(--space-lg);
        padding: 0 var(--space-sm);
    }
    
    .progress-step {
        min-width: 60px;
        padding: 0 var(--space-xs);
    }
    
    .step-number {
        width: 30px;
        height: 30px;
        font-size: 10px;
    }
    
    .step-label {
        font-size: 9px;
        display: none;
    }
    
    .step-header {
        margin-bottom: var(--space-lg);
        padding-bottom: var(--space-md);
    }
    
    .step-header h2 {
        font-size: var(--font-lg);
    }
    
    .step-header p {
        font-size: var(--font-base);
    }
    
    .checkout-form .form-group input,
    .checkout-form .form-group select,
    .checkout-form .form-group textarea {
        padding: var(--space-sm) var(--space-md);
        min-height: 45px;
    }
    
    .demo-notice {
        padding: var(--space-md);
        flex-direction: column;
        text-align: center;
        gap: var(--space-sm);
    }
    
    .order-review {
        padding: var(--space-md);
    }
    
    .summary-item {
        flex-direction: column;
        text-align: center;
        gap: var(--space-sm);
    }
    
    .summary-item-image {
        width: 80px;
        height: 80px;
        align-self: center;
    }
}

/* Loading States for Checkout */
.checkout-loading {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(255, 255, 255, 0.9);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 100;
    border-radius: var(--radius-xl);
}

.checkout-loading .spinner {
    width: 40px;
    height: 40px;
    border: 4px solid var(--color-border);
    border-top: 4px solid var(--color-primary);
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

/* Enhanced Focus States for Accessibility */
.checkout-form input:focus,
.checkout-form select:focus,
.checkout-form textarea:focus,
.checkbox-label:focus-within {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
}

/* Print Styles for Order Confirmation */
@media print {
    .checkout-section {
        background: white;
    }
    
    .modal {
        position: static;
        background: none;
        opacity: 1;
        visibility: visible;
    }
    
    .modal-content {
        box-shadow: none;
        border: 1px solid #000;
        max-width: none;
        width: 100%;
    }
    
    .modal-footer {
        display: none;
    }
}

/* High Contrast Mode Support */
@media (prefers-contrast: high) {
    .checkout-form .form-group input,
    .checkout-form .form-group select,
    .checkout-form .form-group textarea {
        border-width: 3px;
    }
    
    .progress-step.active .step-number,
    .progress-step.completed .step-number {
        border-width: 4px;
    }
}

/* Reduced Motion Support */
@media (prefers-reduced-motion: reduce) {
    .checkout-step.active {
        animation: none;
    }
    
    .modal-content {
        transition: none;
    }
    
    .progress-step.active .step-number {
        transform: none;
    }
}


/* ============================================================================
   6. ABOUT PAGE
   ============================================================================ */

/* ----------------------------------------------------------------------------
   About Hero Section
   ---------------------------------------------------------------------------- */
.about-hero {
    min-height: 60vh;
    background: linear-gradient(135deg, rgba(44, 62, 80, 0.8) 0%, rgba(74, 107, 107, 0.8) 100%),
                url('../assets/Moon move.gif') center center / cover no-repeat;
    background-attachment: fixed;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: var(--color-white);
    position: relative;
    overflow: hidden;
}

.about-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 30% 20%, rgba(201, 169, 97, 0.2) 0%, transparent 50%);
    z-index: 1;
}

.about-hero .hero-content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    padding: 0 var(--space-md);
}

.about-hero h1 {
    font-family: var(--font-heading);
    font-size: clamp(3rem, 6vw, 5rem);
    font-weight: var(--font-bold);
    margin-bottom: var(--space-lg);
    background: linear-gradient(135deg, var(--color-secondary) 0%, var(--color-accent) 50%, var(--color-secondary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: 0 0 30px rgba(232, 220, 196, 0.4);
}

.hero-subtitle {
    font-size: var(--font-xl);
    opacity: 0.9;
    font-weight: var(--font-light);
    letter-spacing: 1px;
    margin: 0;
}

/* Brand Story Section */
.brand-story {
    padding: var(--space-4xl) 0;
    background: var(--color-white);
}

.story-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-4xl);
    align-items: center;
}

.story-text h2 {
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-size: var(--font-3xl);
    margin-bottom: var(--space-xl);
    position: relative;
}

.story-text h2::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 0;
    width: 60px;
    height: 4px;
    background: var(--color-accent);
    border-radius: 2px;
}

.story-text p {
    font-size: var(--font-lg);
    line-height: 1.8;
    color: var(--color-text);
    margin-bottom: var(--space-xl);
    opacity: 0.9;
}

.story-text p:last-child {
    margin-bottom: 0;
}

.story-image {
    position: relative;
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-xl);
}

.story-image img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    transition: transform var(--transition-slow);
}

.story-image:hover img {
    transform: scale(1.05);
}

.story-image::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(201, 169, 97, 0.1) 0%, transparent 50%);
    z-index: 1;
    opacity: 0;
    transition: opacity var(--transition-normal);
}

.story-image:hover::before {
    opacity: 1;
}

/* Mission & Vision Section */
.mission-vision {
    padding: var(--space-4xl) 0;
    background: linear-gradient(135deg, var(--color-secondary) 0%, var(--color-light-sage) 100%);
}

.mission-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-2xl);
}

.mission-card,
.vision-card {
    background: var(--color-white);
    padding: var(--space-2xl);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-lg);
    text-align: center;
    position: relative;
    overflow: hidden;
    transition: all var(--transition-normal);
}

.mission-card::before,
.vision-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--color-primary) 0%, var(--color-accent) 100%);
}

.mission-card:hover,
.vision-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-xl);
}

.mission-card h3,
.vision-card h3 {
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-size: var(--font-2xl);
    margin-bottom: var(--space-lg);
    font-weight: var(--font-semibold);
}

.mission-card p,
.vision-card p {
    font-size: var(--font-lg);
    line-height: 1.7;
    color: var(--color-text);
    opacity: 0.9;
    margin: 0;
}

/* Values Section */
.values-section {
    padding: var(--space-4xl) 0;
    background: var(--color-white);
}

.values-section h2 {
    text-align: center;
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-size: var(--font-3xl);
    margin-bottom: var(--space-2xl);
    position: relative;
}

.values-section h2::after {
    content: '';
    position: absolute;
    bottom: -15px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 4px;
    background: var(--color-accent);
    border-radius: 2px;
}

.values-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-xl);
    margin-top: var(--space-2xl);
}

.value-card {
    background: var(--color-white);
    padding: var(--space-2xl);
    border-radius: var(--radius-xl);
    text-align: center;
    box-shadow: var(--shadow-md);
    border: 1px solid var(--color-border);
    transition: all var(--transition-normal);
    position: relative;
    overflow: hidden;
}

.value-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(201, 169, 97, 0.05) 0%, transparent 50%);
    opacity: 0;
    transition: opacity var(--transition-normal);
}

.value-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
    border-color: var(--color-accent);
}

.value-card:hover::before {
    opacity: 1;
}

.value-icon {
    font-size: 3rem;
    margin-bottom: var(--space-lg);
    display: block;
    filter: grayscale(20%);
    transition: all var(--transition-normal);
}

.value-card:hover .value-icon {
    filter: grayscale(0%);
    transform: scale(1.1);
}

.value-card h4 {
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-size: var(--font-xl);
    margin-bottom: var(--space-md);
    font-weight: var(--font-semibold);
}

.value-card p {
    color: var(--color-text);
    opacity: 0.9;
    line-height: 1.6;
    margin: 0;
}

/* Craftsmanship Section */
.craftsmanship {
    padding: var(--space-4xl) 0;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-text) 100%);
    color: var(--color-white);
}

.craft-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-4xl);
    align-items: center;
}

.craft-image {
    position: relative;
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-xl);
}

.craft-image img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    transition: transform var(--transition-slow);
}

.craft-image:hover img {
    transform: scale(1.05);
}

.craft-text h2 {
    color: var(--color-white);
    font-family: var(--font-heading);
    font-size: var(--font-3xl);
    margin-bottom: var(--space-xl);
    position: relative;
}

.craft-text h2::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 0;
    width: 60px;
    height: 4px;
    background: var(--color-accent);
    border-radius: 2px;
}

.craft-text p {
    font-size: var(--font-lg);
    line-height: 1.8;
    opacity: 0.9;
    margin-bottom: var(--space-2xl);
}

.craft-features {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
}

.feature {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
    padding: var(--space-lg);
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-lg);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: all var(--transition-normal);
}

.feature:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateX(10px);
}

.feature strong {
    color: var(--color-accent);
    font-size: var(--font-lg);
    font-weight: var(--font-semibold);
    font-family: var(--font-heading);
}

.feature span {
    color: var(--color-white);
    opacity: 0.9;
    font-size: var(--font-sm);
}

/* Timeline Section */
.timeline-section {
    padding: var(--space-4xl) 0;
    background: linear-gradient(135deg, var(--color-secondary) 0%, var(--color-light-sage) 100%);
}

.timeline-section h2 {
    text-align: center;
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-size: var(--font-3xl);
    margin-bottom: var(--space-2xl);
    position: relative;
}

.timeline-section h2::after {
    content: '';
    position: absolute;
    bottom: -15px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 4px;
    background: var(--color-accent);
    border-radius: 2px;
}

.timeline {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
    padding: var(--space-xl) 0;
}

.timeline::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 4px;
    background: var(--color-accent);
    transform: translateX(-50%);
    border-radius: 2px;
}

.timeline-item {
    position: relative;
    margin-bottom: var(--space-2xl);
    display: flex;
    align-items: center;
    gap: var(--space-xl);
}

.timeline-item:nth-child(odd) {
    flex-direction: row;
}

.timeline-item:nth-child(even) {
    flex-direction: row-reverse;
}

.timeline-item::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    width: 16px;
    height: 16px;
    background: var(--color-accent);
    border: 4px solid var(--color-white);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
    box-shadow: 0 0 0 4px var(--color-accent);
}

.timeline-date {
    background: var(--color-primary);
    color: var(--color-white);
    padding: var(--space-sm) var(--space-lg);
    border-radius: var(--radius-lg);
    font-weight: var(--font-bold);
    font-size: var(--font-lg);
    min-width: 100px;
    text-align: center;
    box-shadow: var(--shadow-md);
}

.timeline-content {
    background: var(--color-white);
    padding: var(--space-xl);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-lg);
    flex: 1;
    max-width: 300px;
    border: 1px solid var(--color-border);
    transition: all var(--transition-normal);
}

.timeline-content:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-xl);
}

.timeline-content h4 {
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-size: var(--font-xl);
    margin-bottom: var(--space-sm);
    font-weight: var(--font-semibold);
}

.timeline-content p {
    color: var(--color-text);
    opacity: 0.9;
    line-height: 1.6;
    margin: 0;
}

/* Timeline Animations */
.timeline-item {
    opacity: 0;
    transform: translateY(30px);
    animation: timelineSlideIn 0.6s ease-out forwards;
}

.timeline-item:nth-child(1) { animation-delay: 0.2s; }
.timeline-item:nth-child(2) { animation-delay: 0.4s; }
.timeline-item:nth-child(3) { animation-delay: 0.6s; }

@keyframes timelineSlideIn {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Reduced motion support for timeline */
@media (prefers-reduced-motion: reduce) {
    .timeline-item {
        opacity: 1;
        transform: none;
        animation: none;
    }
}

/* Timeline Responsive */
@media (max-width: 768px) {
    .timeline::before {
        left: 30px;
    }
    
    .timeline-item {
        flex-direction: row !important;
        padding-left: 60px;
    }
    
    .timeline-item::before {
        left: 30px;
    }
    
    .timeline-date {
        position: absolute;
        left: -50px;
        top: 50%;
        transform: translateY(-50%);
        min-width: 80px;
        font-size: var(--font-sm);
        padding: var(--space-xs) var(--space-sm);
    }
    
    .timeline-content {
        max-width: none;
        margin-left: var(--space-lg);
    }
}

@media (max-width: 600px) {
    .timeline-section {
        padding: var(--space-2xl) 0;
    }
    
    .timeline {
        padding: var(--space-lg) 0;
    }
    
    .timeline-item {
        margin-bottom: var(--space-xl);
        padding-left: 40px;
    }
    
    .timeline::before {
        left: 20px;
    }
    
    .timeline-item::before {
        left: 20px;
        width: 12px;
        height: 12px;
    }
    
    .timeline-date {
        left: -40px;
        min-width: 60px;
        font-size: var(--font-xs);
    }
    
    .timeline-content {
        padding: var(--space-lg);
        margin-left: var(--space-md);
    }
    
    .timeline-content h4 {
        font-size: var(--font-lg);
    }
}

/* Student Information Section */
.student-info {
    padding: var(--space-4xl) 0;
    background: rgba(232, 220, 196, 0.3);
}

.info-card {
    background: var(--color-white);
    border-radius: var(--radius-xl);
    padding: var(--space-2xl);
    box-shadow: var(--shadow-lg);
    border: 2px solid var(--color-accent);
    max-width: 800px;
    margin: 0 auto;
}

.info-card h2 {
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-size: var(--font-2xl);
    text-align: center;
    margin-bottom: var(--space-2xl);
    position: relative;
}

.info-card h2::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: var(--color-accent);
    border-radius: 2px;
}

.student-details {
    display: grid;
    gap: var(--space-lg);
}

.detail-row {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: var(--space-md);
    padding: var(--space-md);
    border-bottom: 1px solid var(--color-border);
    align-items: center;
}

.detail-row:last-child {
    border-bottom: none;
}

.label {
    font-weight: var(--font-semibold);
    color: var(--color-primary);
    font-size: var(--font-base);
}

.value {
    color: var(--color-text);
    font-size: var(--font-base);
}

.value a {
    color: var(--color-accent);
    text-decoration: none;
    transition: color var(--transition-normal);
}

.value a:hover {
    color: var(--color-primary);
    text-decoration: underline;
}

/* CTA Section */
.cta-section {
    padding: var(--space-4xl) 0;
    background: linear-gradient(135deg, var(--color-text) 0%, var(--color-primary) 100%);
    text-align: center;
    color: var(--color-white);
}

.cta-content h2 {
    color: var(--color-white);
    font-family: var(--font-heading);
    font-size: var(--font-3xl);
    margin-bottom: var(--space-lg);
}

.cta-content p {
    font-size: var(--font-xl);
    opacity: 0.9;
    margin-bottom: var(--space-2xl);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
}

.cta-content .btn {
    font-size: var(--font-lg);
    padding: var(--space-lg) var(--space-2xl);
    min-width: 200px;
}

/* Responsive Design */
@media (max-width: 950px) {
    .about-hero {
        min-height: 50vh;
        background-attachment: scroll;
    }
    
    .about-hero h1 {
        font-size: clamp(2.5rem, 5vw, 4rem);
    }
    
    .hero-subtitle {
        font-size: var(--font-lg);
    }
    
    .story-grid,
    .craft-grid {
        grid-template-columns: 1fr;
        gap: var(--space-2xl);
        text-align: center;
    }
    
    .story-image,
    .craft-image {
        order: -1;
    }
    
    .mission-grid {
        grid-template-columns: 1fr;
        gap: var(--space-xl);
    }
    
    .values-grid {
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: var(--space-lg);
    }
    
    .detail-row {
        grid-template-columns: 1fr;
        gap: var(--space-xs);
        text-align: center;
    }
    
    .label {
        font-weight: var(--font-bold);
    }
}

@media (max-width: 768px) {
    .about-hero {
        min-height: 40vh;
        padding: var(--space-2xl) 0;
    }
    
    .brand-story,
    .mission-vision,
    .values-section,
    .craftsmanship,
    .student-info,
    .cta-section {
        padding: var(--space-2xl) 0;
    }
    
    .story-text h2,
    .craft-text h2,
    .values-section h2,
    .cta-content h2 {
        font-size: var(--font-2xl);
    }
    
    .story-text p,
    .craft-text p {
        font-size: var(--font-base);
    }
    
    .story-image img,
    .craft-image img {
        height: 300px;
    }
    
    .mission-card,
    .vision-card {
        padding: var(--space-xl);
    }
    
    .mission-card h3,
    .vision-card h3 {
        font-size: var(--font-xl);
    }
    
    .mission-card p,
    .vision-card p {
        font-size: var(--font-base);
    }
    
    .value-card {
        padding: var(--space-xl);
    }
    
    .value-icon {
        font-size: 2.5rem;
    }
    
    .craft-features {
        gap: var(--space-md);
    }
    
    .feature {
        padding: var(--space-md);
    }
    
    .info-card {
        padding: var(--space-xl);
    }
    
    .cta-content p {
        font-size: var(--font-lg);
    }
}

@media (max-width: 600px) {
    .about-hero {
        min-height: 35vh;
    }
    
    .about-hero h1 {
        font-size: clamp(2rem, 4vw, 3rem);
    }
    
    .hero-subtitle {
        font-size: var(--font-base);
    }
    
    .brand-story,
    .mission-vision,
    .values-section,
    .craftsmanship,
    .student-info,
    .cta-section {
        padding: var(--space-xl) 0;
    }
    
    .story-grid,
    .craft-grid {
        gap: var(--space-xl);
    }
    
    .story-image img,
    .craft-image img {
        height: 250px;
    }
    
    .values-grid {
        grid-template-columns: 1fr;
        gap: var(--space-md);
    }
    
    .mission-card,
    .vision-card,
    .value-card {
        padding: var(--space-lg);
    }
    
    .info-card {
        padding: var(--space-lg);
        margin: 0 var(--space-md);
    }
    
    .detail-row {
        padding: var(--space-sm);
    }
    
    .cta-content .btn {
        width: 100%;
        max-width: 300px;
    }
}

/* Animation Enhancements */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.story-text,
.craft-text,
.mission-card,
.vision-card,
.value-card {
    animation: fadeInUp 0.6s ease-out;
}

/* Scroll Animations (Optional Enhancement) */
@media (prefers-reduced-motion: no-preference) {
    .story-text,
    .craft-text,
    .mission-card,
    .vision-card,
    .value-card {
        opacity: 0;
        animation: none;
    }
    
    .story-text.animate,
    .craft-text.animate,
    .mission-card.animate,
    .vision-card.animate,
    .value-card.animate {
        animation: fadeInUp 0.6s ease-out forwards;
    }
}

/* High Contrast Mode Support */
@media (prefers-contrast: high) {
    .value-card,
    .mission-card,
    .vision-card,
    .info-card {
        border-width: 3px;
    }
    
    .story-image,
    .craft-image {
        border: 2px solid var(--color-text);
    }
}

/* Print Styles */
@media print {
    .about-hero {
        background: none;
        color: var(--color-text);
        min-height: auto;
        padding: var(--space-lg) 0;
    }
    
    .about-hero h1 {
        color: var(--color-text);
        background: none;
        -webkit-text-fill-color: initial;
    }
    
    .craftsmanship,
    .cta-section {
        background: none;
        color: var(--color-text);
    }
    
    .craft-text h2,
    .cta-content h2 {
        color: var(--color-text);
    }
    
    .feature {
        background: var(--color-secondary);
        color: var(--color-text);
    }
    
    .cta-section {
        display: none;
    }
}


/* ============================================================================
   7. CARE TIPS PAGE
   ============================================================================ */

/* ----------------------------------------------------------------------------
   Care Header
   ---------------------------------------------------------------------------- */
.care-header {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-text) 100%);
    color: var(--color-white);
}

.care-header h1 {
    color: var(--color-white);
}

.care-header p {
    color: rgba(255, 255, 255, 0.9);
}

/* Care Content */
.care-content {
    padding: var(--space-4xl) 0;
    background: var(--color-white);
}

/* ----------------------------------------------------------------------------
   Table of Contents
   ---------------------------------------------------------------------------- */
.table-of-contents {
    margin-bottom: var(--space-4xl);
    text-align: center;
}

.table-of-contents h2 {
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-size: var(--font-3xl);
    margin-bottom: var(--space-2xl);
    position: relative;
}

.table-of-contents h2::after {
    content: '';
    position: absolute;
    bottom: -15px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 4px;
    background: var(--color-accent);
    border-radius: 2px;
}

.toc-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-lg);
    margin-top: var(--space-2xl);
}

.toc-item {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
    background: var(--color-white);
    padding: var(--space-xl);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-md);
    border: 1px solid var(--color-border);
    text-decoration: none;
    transition: all var(--transition-normal);
    position: relative;
    overflow: hidden;
}

.toc-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(201, 169, 97, 0.05) 0%, transparent 50%);
    opacity: 0;
    transition: opacity var(--transition-normal);
}

.toc-item:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-xl);
    border-color: var(--color-accent);
}

.toc-item:hover::before {
    opacity: 1;
}

.toc-icon {
    font-size: 2.5rem;
    flex-shrink: 0;
}

.toc-text h4 {
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-size: var(--font-lg);
    margin-bottom: var(--space-xs);
    font-weight: var(--font-semibold);
}

.toc-text p {
    color: var(--color-text);
    opacity: 0.8;
    line-height: 1.5;
    margin: 0;
    font-size: var(--font-sm);
}

/* ----------------------------------------------------------------------------
   Quick Tips Overview
   ---------------------------------------------------------------------------- */
.quick-tips {
    margin-bottom: var(--space-4xl);
    text-align: center;
}

.quick-tips h2 {
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-size: var(--font-3xl);
    margin-bottom: var(--space-2xl);
    position: relative;
}

.quick-tips h2::after {
    content: '';
    position: absolute;
    bottom: -15px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 4px;
    background: var(--color-accent);
    border-radius: 2px;
}

.tips-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-xl);
    margin-top: var(--space-2xl);
}

.tip-card {
    background: var(--color-white);
    padding: var(--space-2xl);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-lg);
    border: 1px solid var(--color-border);
    text-align: center;
    transition: all var(--transition-normal);
    position: relative;
    overflow: hidden;
}

.tip-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(201, 169, 97, 0.05) 0%, transparent 50%);
    opacity: 0;
    transition: opacity var(--transition-normal);
}

.tip-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
    border-color: var(--color-accent);
}

.tip-card:hover::before {
    opacity: 1;
}

.tip-icon {
    font-size: 3rem;
    margin-bottom: var(--space-lg);
    display: block;
}

.tip-card h4 {
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-size: var(--font-xl);
    margin-bottom: var(--space-md);
    font-weight: var(--font-semibold);
}

.tip-card p {
    color: var(--color-text);
    opacity: 0.9;
    line-height: 1.6;
    margin: 0;
}

/* ----------------------------------------------------------------------------
   Care Sections
   ---------------------------------------------------------------------------- */
.care-sections {
    margin-bottom: var(--space-4xl);
}

.care-section {
    margin-bottom: var(--space-4xl);
    padding: var(--space-2xl) 0;
}

.care-section:nth-child(even) {
    background: rgba(232, 220, 196, 0.1);
    border-radius: var(--radius-xl);
    padding: var(--space-2xl);
}

.section-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-4xl);
    align-items: center;
}

.section-content.reverse {
    grid-template-columns: 1fr 1fr;
}

.section-content.reverse .section-image {
    order: -1;
}

.section-text h3 {
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-size: var(--font-2xl);
    margin-bottom: var(--space-lg);
    position: relative;
}

.section-text h3::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 50px;
    height: 3px;
    background: var(--color-accent);
    border-radius: 2px;
}

.section-text p {
    font-size: var(--font-lg);
    line-height: 1.7;
    color: var(--color-text);
    margin-bottom: var(--space-xl);
    opacity: 0.9;
}

.section-image {
    position: relative;
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
}

.section-image img {
    width: 100%;
    height: 350px;
    object-fit: cover;
    transition: transform var(--transition-slow);
}

.section-image:hover img {
    transform: scale(1.05);
}

/* ----------------------------------------------------------------------------
   Instruction Lists
   ---------------------------------------------------------------------------- */
.instruction-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
}

.instruction-item {
    display: flex;
    align-items: flex-start;
    gap: var(--space-lg);
    padding: var(--space-lg);
    background: rgba(255, 255, 255, 0.7);
    border-radius: var(--radius-lg);
    border-left: 4px solid var(--color-accent);
    transition: all var(--transition-normal);
}

.instruction-item:hover {
    background: rgba(255, 255, 255, 1);
    transform: translateX(5px);
    box-shadow: var(--shadow-md);
}

.step-number {
    background: var(--color-accent);
    color: var(--color-white);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: var(--font-bold);
    font-size: var(--font-lg);
    flex-shrink: 0;
}

.step-content h5 {
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-size: var(--font-lg);
    margin-bottom: var(--space-sm);
    font-weight: var(--font-semibold);
}

.step-content p {
    color: var(--color-text);
    opacity: 0.9;
    line-height: 1.6;
    margin: 0;
}

/* ----------------------------------------------------------------------------
   Burn Time Chart
   ---------------------------------------------------------------------------- */
.burn-time-chart {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-lg);
    margin: var(--space-xl) 0;
}

.chart-item {
    background: var(--color-white);
    padding: var(--space-xl);
    border-radius: var(--radius-lg);
    text-align: center;
    box-shadow: var(--shadow-md);
    border: 2px solid var(--color-border);
    transition: all var(--transition-normal);
}

.chart-item:hover {
    border-color: var(--color-accent);
    transform: translateY(-3px);
    box-shadow: var(--shadow-lg);
}

.size-label {
    color: var(--color-primary);
    font-weight: var(--font-bold);
    font-size: var(--font-lg);
    margin-bottom: var(--space-sm);
}

.time-recommendation {
    color: var(--color-accent);
    font-weight: var(--font-semibold);
    font-size: var(--font-base);
    margin-bottom: var(--space-xs);
}

.total-life {
    color: var(--color-text);
    opacity: 0.8;
    font-size: var(--font-sm);
}

/* ----------------------------------------------------------------------------
   Warning Box
   ---------------------------------------------------------------------------- */
.warning-box {
    display: flex;
    align-items: flex-start;
    gap: var(--space-md);
    background: linear-gradient(135deg, rgba(255, 193, 7, 0.1) 0%, rgba(255, 193, 7, 0.05) 100%);
    border: 2px solid #ffc107;
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
    margin-top: var(--space-xl);
}

.warning-icon {
    font-size: var(--font-xl);
    flex-shrink: 0;
}

.warning-text {
    color: var(--color-text);
    line-height: 1.6;
}

.warning-text strong {
    color: #e67e22;
    font-weight: var(--font-bold);
}

/* ----------------------------------------------------------------------------
   Safety Section
   ---------------------------------------------------------------------------- */
.safety-section {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-text) 100%);
    color: var(--color-white);
    border-radius: var(--radius-xl);
    padding: var(--space-2xl);
    margin: var(--space-2xl) 0;
}

.section-header {
    text-align: center;
    margin-bottom: var(--space-2xl);
}

.section-header h3 {
    color: var(--color-white);
    font-family: var(--font-heading);
    font-size: var(--font-2xl);
    margin-bottom: var(--space-md);
}

.section-header h3::after {
    background: var(--color-accent);
    left: 50%;
    transform: translateX(-50%);
}

.section-header p {
    color: rgba(255, 255, 255, 0.9);
    font-size: var(--font-lg);
    margin: 0;
}

.safety-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-xl);
}

.safety-item {
    background: rgba(255, 255, 255, 0.1);
    padding: var(--space-xl);
    border-radius: var(--radius-lg);
    text-align: center;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: all var(--transition-normal);
}

.safety-item:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-5px);
}

.safety-icon {
    font-size: 2.5rem;
    margin-bottom: var(--space-lg);
    display: block;
}

.safety-item h5 {
    color: var(--color-accent);
    font-family: var(--font-heading);
    font-size: var(--font-lg);
    margin-bottom: var(--space-md);
    font-weight: var(--font-semibold);
}

.safety-item p {
    color: var(--color-white);
    opacity: 0.9;
    line-height: 1.6;
    margin: 0;
}

/* ----------------------------------------------------------------------------
   Storage Tips
   ---------------------------------------------------------------------------- */
.storage-tips {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
}

.tip-item {
    padding: var(--space-lg);
    background: rgba(232, 220, 196, 0.2);
    border-radius: var(--radius-lg);
    border-left: 4px solid var(--color-accent);
    transition: all var(--transition-normal);
}

.tip-item:hover {
    background: rgba(232, 220, 196, 0.3);
    transform: translateX(5px);
}

.tip-item h5 {
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-size: var(--font-lg);
    margin-bottom: var(--space-sm);
    font-weight: var(--font-semibold);
}

.tip-item p {
    color: var(--color-text);
    opacity: 0.9;
    line-height: 1.6;
    margin: 0;
}

/* ----------------------------------------------------------------------------
   Troubleshooting Section
   ---------------------------------------------------------------------------- */
.troubleshooting {
    background: rgba(232, 220, 196, 0.1);
    border-radius: var(--radius-xl);
    padding: var(--space-2xl);
}

.troubleshooting-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: var(--space-xl);
}

.problem-solution {
    background: var(--color-white);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    border: 1px solid var(--color-border);
    transition: all var(--transition-normal);
}

.problem-solution:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-lg);
}

.problem {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-text) 100%);
    color: var(--color-white);
    padding: var(--space-lg);
}

.problem h5 {
    color: var(--color-accent);
    font-family: var(--font-heading);
    font-size: var(--font-lg);
    margin-bottom: var(--space-sm);
    font-weight: var(--font-semibold);
}

.problem p {
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
    margin: 0;
}

.solution {
    padding: var(--space-lg);
    background: var(--color-white);
}

.solution p {
    color: var(--color-text);
    line-height: 1.6;
    margin: 0;
}

.solution strong {
    color: var(--color-accent);
    font-weight: var(--font-bold);
}

/* ----------------------------------------------------------------------------
   Support Section
   ---------------------------------------------------------------------------- */
.support-section {
    background: linear-gradient(135deg, var(--color-secondary) 0%, var(--color-light-sage) 100%);
    border-radius: var(--radius-xl);
    padding: var(--space-2xl);
    text-align: center;
}

.support-content h3 {
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-size: var(--font-2xl);
    margin-bottom: var(--space-lg);
}

.support-content p {
    color: var(--color-text);
    font-size: var(--font-lg);
    margin-bottom: var(--space-xl);
    opacity: 0.9;
}

.support-options {
    display: flex;
    justify-content: center;
    gap: var(--space-lg);
    flex-wrap: wrap;
}

.support-options .btn {
    min-width: 180px;
}

/* Responsive Design */
@media (max-width: 950px) {
    .section-content,
    .section-content.reverse {
        grid-template-columns: 1fr;
        gap: var(--space-2xl);
        text-align: center;
    }
    
    .section-content.reverse .section-image {
        order: 0;
    }
    
    .tips-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: var(--space-lg);
    }
    
    .safety-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: var(--space-lg);
    }
    
    .troubleshooting-grid {
        grid-template-columns: 1fr;
        gap: var(--space-lg);
    }
    
    .burn-time-chart {
        grid-template-columns: 1fr;
        gap: var(--space-md);
    }
}

@media (max-width: 768px) {
    .care-content {
        padding: var(--space-2xl) 0;
    }
    
    .toc-grid {
        grid-template-columns: 1fr;
        gap: var(--space-md);
    }
    
    .toc-item {
        padding: var(--space-lg);
    }
    
    .toc-icon {
        font-size: 2rem;
    }
    
    .tips-grid,
    .safety-grid {
        grid-template-columns: 1fr;
        gap: var(--space-md);
    }
    
    .section-image img {
        height: 250px;
    }
    
    .instruction-item {
        flex-direction: column;
        text-align: center;
        gap: var(--space-md);
    }
    
    .step-number {
        align-self: center;
    }
    
    .warning-box {
        flex-direction: column;
        text-align: center;
        gap: var(--space-sm);
    }
    
    .support-options {
        flex-direction: column;
        align-items: center;
    }
    
    .support-options .btn {
        width: 100%;
        max-width: 300px;
    }
    
    .care-section:nth-child(even) {
        padding: var(--space-lg);
    }
    
    .safety-section,
    .troubleshooting,
    .support-section {
        padding: var(--space-lg);
    }
}

@media (max-width: 600px) {
    .quick-tips h2,
    .section-header h3,
    .section-text h3,
    .support-content h3 {
        font-size: var(--font-xl);
    }
    
    .tip-card,
    .safety-item {
        padding: var(--space-lg);
    }
    
    .tip-icon,
    .safety-icon {
        font-size: 2rem;
    }
    
    .instruction-item,
    .tip-item {
        padding: var(--space-md);
    }
    
    .chart-item {
        padding: var(--space-lg);
    }
    
    .problem,
    .solution {
        padding: var(--space-md);
    }
}

/* Print Styles */
@media print {
    .care-content {
        background: white;
    }
    
    .safety-section,
    .troubleshooting {
        background: none;
        color: var(--color-text);
        border: 1px solid var(--color-border);
    }
    
    .section-header h3,
    .safety-item h5 {
        color: var(--color-text);
    }
    
    .safety-item p {
        color: var(--color-text);
    }
    
    .problem {
        background: var(--color-secondary);
        color: var(--color-text);
    }
    
    .support-section {
        display: none;
    }
}

/* High Contrast Mode Support */
@media (prefers-contrast: high) {
    .tip-card,
    .safety-item,
    .chart-item,
    .problem-solution {
        border-width: 3px;
    }
    
    .instruction-item,
    .tip-item {
        border-left-width: 6px;
    }
}

/* Reduced Motion Support */
@media (prefers-reduced-motion: reduce) {
    .tip-card,
    .safety-item,
    .chart-item,
    .problem-solution,
    .instruction-item,
    .tip-item {
        transition: none;
    }
    
    .section-image img {
        transition: none;
    }
}